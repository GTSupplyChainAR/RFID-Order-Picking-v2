<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!--===================
    ===== CONSOLE LOG =====
    =======================
    This is hidden during
    experiment runtime  -->

    <LinearLayout
        android:id="@+id/glassLogLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="Glass Log\n========"
            android:textSize="15dp" />

        <ScrollView
            android:id="@+id/glassLogScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/glassLog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:text="> "
                android:textSize="15dp" />
        </ScrollView>

    </LinearLayout>

    <!--===================
    ==== USER FRIENDLY ====
    =======================
    This is hidden during
    experiment runtime  -->
    <TextView
        android:id="@+id/user_friendly_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbb"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="AWAITING CONNECTION"/>



    <!--
          EXPERIMENT VIEW
                            -->
    <LinearLayout
        android:id = "@+id/experiment_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    </LinearLayout>

</LinearLayout>